---
import ProyectosItems from "./ProyectosItems.astro";

interface Proyecto {
    title: string;
    description: string;
    link?: string;
    imageUrl: string;
}

const PROYECTOS: Proyecto[] = [
    {
        title: "Grupo Oro Scraping - Django",
        description: "Web scraping de negocios construida con Django y la API de Serper en la que el usuario puede buscar informaci√≥n de empresas con su propia key.",
        link: "https://scraping.grupooro.es/",
        imageUrl: "/images/proyectos/scrapinggo.png"
    },
    {
        title: "EntKeeper - Addon",
        description: "Addon para Minecraft que introduce criaturas. Modelado por mi con BlockBench y programado para ser funcional en Minecraft Java.",
        link: "https://github.com/JrNiRos/addon-javamc1",
        imageUrl: "/images/proyectos/entkeeper.png"
    },
    {
        title: "CubeForge - Laravel",
        description: "Plataforma web multivendedor para compra y venta de Addons para juegos. Construida con Laravel 12 y Tailwind CSS, ofrece una experiencia de usuario fluida y segura.",
        imageUrl: "/images/proyectos/CubeForge.jpg"
    },
];
---

<ol class="relative border-s border-default">
    {
        PROYECTOS.map((proyectos) => (
            <li class="mb-10 ms-4">
                <ProyectosItems {...proyectos} />
            </li>
        ))
    }
</ol>