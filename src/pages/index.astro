---
import "../styles/global.css";
import Badge from "../components/Badge.astro";
import Header from "../components/Header.astro";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Redes from "../components/Redes.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Code from "../components/icons/Code.astro";
import Suitcase from "../components/icons/Suitcase.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout
	title="Portfolio de Jose Raimundo Nieves Rosa - Desarrollador, Programador Web y Modelador 3D"
>
	<main class="px-4">
		<section class="w-full max-w-4xl mx-auto py-44">
			<!-- esto para q en pantallas mas grande se escale mejor -->
			<h1
				class="text-white md:text-3xl lg:text-4xl font-bold flex items-center gap-x-4 pb-2"
			>
				Hola, soy Jose!
				<a
					href="https://www.linkedin.com/in/jose-raimundo-nieves-rosa-599215384/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge> Disponible para trabajar!</Badge>
				</a>
			</h1>
			<h2 class="text-xl opacity-80 text-wrap max-w-full max-w-[700px]">
				Recién graduado. Desarrollador y Modelador 3D en BlockBench.
				Ubicado en Sevilla, España. Especializado en el Desarrollo Web y
				crear soluciones digitales.
			</h2>

			<nav class="flex justify-center items-center flex-wrap gap-2 py-4 px-4">
				<Redes />
			</nav>

			<SectionContainer id="experiencia" class="py-1">
				<nav class="gap-x-1 py-10">
					<h2 class="flex items-center text-3xl font-semibold">
						<Suitcase class="me-2" />
						Experiencia y Formación
					</h2>
					<Experiencia class="flex justify-center items-center" />
				</nav>
			</SectionContainer>

			<SectionContainer id="proyectos" class="py-1">
				<nav class="gap-x-1 py-10">
					<h2 class="flex items-center text-3xl font-semibold">
						<Code class="me-2" />
						Proyectos
					</h2>
					<Experiencia class="flex justify-center items-center" />
				</nav>
			</SectionContainer>
		</section>
	</main>
</Layout>
