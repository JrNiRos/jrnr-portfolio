---
import "../styles/global.css";
import Badge from "../components/Badge.astro";
import Header from "../components/Header.astro";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Redes from "../components/Redes.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Code from "../components/icons/Code.astro";
import Suitcase from "../components/icons/Suitcase.astro";
import Proyectos from "../components/Proyectos.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout
	title="Portfolio de Jose Raimundo Nieves Rosa - Desarrollador, Programador Web y Modelador 3D"
>
	<main class="px-4">
		<section class="w-full max-w-4xl mx-auto py-34">
			<!-- esto para q en pantallas mas grande se escale mejor -->
			<h1
				class="text-white md:text-4xl lg:text-4xl font-bold flex items-center gap-x-4 pb-2"
			>
				Hola, soy <span class="text-yellow-500">Jose</span>!
				<a
					href="https://www.linkedin.com/in/jose-raimundo-nieves-rosa-599215384/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge> Disponible para trabajar!</Badge>
				</a>
			</h1>
			<h2
				class="md:text-3xl lg:text-2xl opacity-80 text-wrap max-w-full max-w-[700px]"
			>
				Recién graduado. Desarrollador y apasionado por el Modelaje 3D en BlockBench.
				Ubicado en Sevilla, España. Especializado en el Desarrollo Web y
				crear soluciones digitales.
			</h2>

			<nav
				class="flex justify-center items-center flex-wrap gap-2 py-4 px-4"
			>
				<Redes />
			</nav>

			<SectionContainer id="experiencia" class="py-1">
				<nav class="gap-x-1 py-8">
					<h2 class="flex items-center text-3xl font-semibold">
						<Suitcase class="me-2" />
						Experiencia y Formación
					</h2>
					<Experiencia class="flex justify-center items-center" />
				</nav>
			</SectionContainer>

			<SectionContainer id="proyectos" class="py-1">
				<nav class="gap-x-1 py-8">
					<h2 class="flex items-center text-3xl font-semibold py-10">
						<Code class="me-2" />
						Proyectos
					</h2>
					<Proyectos
						class="flex justify-center items-center py-4 mt-8"
					/>
				</nav>
			</SectionContainer>

			<SectionContainer id="sobremi" class="py-2">
				<section class="text-white body-font">
					<div class="container px-5 py-14 mx-auto flex flex-col">
						<div class="w-full mx-auto">
							<div class="flex flex-col sm:flex-row mt-10">
								<div
									class="sm:w-1/3 text-center sm:pr-8 sm:py-8"
								>
									<div
										class="w-20 h-20 rounded-full inline-flex items-center justify-center bg-gray-200 text-white"
									>
										<img
											src="/images/joserfoto3.jpg"
											alt="Foto de perfil de Jose Raimundo Nieves Rosa"
											class="w-20 h-20 rounded-full object-cover"
										/>
									</div>
									<div
										class="flex flex-col items-center text-center justify-center"
									>
										<h2
											class="font-medium title-font mt-4 text-white text-lg"
										>
											Jose Raimundo Nieves Rosa
										</h2>
										<div
											class="w-12 h-1 bg-white rounded mt-2 mb-4"
										>
										</div>
										<p class="text-base opacity-80">
											Apasionado por la tecnología y el
											desarrollo.
										</p>
									</div>
								</div>
								<div
									class="sm:w-2/3 sm:pl-8 sm:py-8 sm:border-l border-gray-200 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left"
								>
									<p
										class="leading-relaxed text-lg mb-4 opacity-80"
									>
										Soy desarrollador <span
											class="text-yellow-500"
											>Full Stack</span
										> con experiencia en la creación de aplicaciones
										web completas, desde el diseño de la lógica
										del servidor hasta la interfaz de usuario.
										He trabajado con tecnologías como Laravel,
										Django, Astro, Node.js y Spring Boot, además
										de contar con conocimientos en Java, PHP y
										Python. Para el desarrollo frontend utilizo
										herramientas modernas como Tailwind CSS o
										React, priorizando interfaces limpias, funcionales
										y responsivas.
									</p>
								</div>
							</div>
						</div>
					</div>
				</section>
			</SectionContainer>
		</section>
	</main>
</Layout>
